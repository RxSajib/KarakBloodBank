<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="TabPages.DonorPage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <RelativeLayout
            android:id="@+id/LayoutIF"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/SearchSpinnersID"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Spinner>

            <SearchView
                android:layout_toRightOf="@+id/SearchSpinnersID"
                android:queryHint="Search blood or username"
                android:id="@+id/DSearchID"
                android:elevation="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:autofillHints="Search By Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </SearchView>


        </RelativeLayout>





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/DonorLayoutID"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">





            </RelativeLayout>




        </RelativeLayout>






        <RelativeLayout
            android:layout_below="@+id/LayoutIF"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="match_parent">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/DonarViewID"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </androidx.recyclerview.widget.RecyclerView>


        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>