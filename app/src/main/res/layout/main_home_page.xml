<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="HomePage.MainHomePage"
    android:id="@+id/SecondContiner"
    android:fitsSystemWindows="true">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/MainDrawerID"
        android:layout_width="match_parent"
        android:layout_height="match_parent">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/MainAppbarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



            <ImageView
                android:id="@+id/ac"
                android:src="@drawable/meu_icon"
                android:layout_width="25dp"
                android:layout_height="25dp">

            </ImageView>

                <ImageView
                    android:id="@+id/AddButtonID"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/add_white_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp">

                </ImageView>


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/SignUpButtonID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/ac"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:text="Karak Blood Bank"
                android:textColor="@android:color/white"
                android:textSize="18dp">

            </com.google.android.material.textview.MaterialTextView>
            </RelativeLayout>

        </com.google.android.material.appbar.MaterialToolbar>






        </com.google.android.material.appbar.AppBarLayout>

        <RelativeLayout
            android:layout_below="@+id/MainAppbarLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <FrameLayout
                android:id="@+id/BottomPageContiner"
                android:layout_below="@+id/BottomBavViewID"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </FrameLayout>


            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/BottomBavViewID"
                android:layout_width="match_parent"
                app:menu="@menu/bottom_nav_iteams"
                android:layout_height="wrap_content">

            </com.google.android.material.bottomnavigation.BottomNavigationView>


            <!--<androidx.viewpager.widget.ViewPager
                android:id="@+id/ViewpagerID"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </androidx.viewpager.widget.ViewPager>-->

        </RelativeLayout>

    </RelativeLayout>

        <com.google.android.material.navigation.NavigationView
            android:layout_width="wrap_content"
            android:layout_gravity = "start"
            app:menu="@menu/app_menulayout"
            android:id="@+id/MainNavID"
            android:layout_height="match_parent">


        </com.google.android.material.navigation.NavigationView>

    </androidx.drawerlayout.widget.DrawerLayout>
</RelativeLayout>