<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="PostPage.PostIteams">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/PostToolbarID"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/backIconID"
                    android:layout_centerVertical="true"
                    android:src="@drawable/back_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp">

                </ImageView>

                <com.google.android.material.textview.MaterialTextView
                    android:textSize="12sp"
                    android:text="Add Your Post"
                    android:layout_toRightOf="@id/backIconID"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:layout_width="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content">

                </com.google.android.material.textview.MaterialTextView>


            </RelativeLayout>

        </com.google.android.material.appbar.MaterialToolbar>

        <RelativeLayout
            android:layout_below="@+id/PostToolbarID"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/AddID"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                ads:adSize="BANNER"
                ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
            </com.google.android.gms.ads.AdView>

            <com.google.android.material.card.MaterialCardView
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:clickable="true"
                android:layout_marginTop="15dp"
                android:id="@+id/CCone"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                app:cardCornerRadius="15dp"
                android:layout_height="100dp">


                <RelativeLayout
                    android:id="@+id/DonateBloodButton"
                    android:background="#55AC16"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/BloodDonationPic"
                        android:layout_width="70dp"
                        android:src="@drawable/blood_donaticpic"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_height="70dp">

                    </ImageView>

                    <TextView
                        android:textColor="#FFFFFF"
                        android:layout_toRightOf="@id/BloodDonationPic"
                        android:layout_centerVertical="true"
                        android:textSize="22dp"
                        android:fontFamily="sans-serif-condensed"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:text="Donate Blood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                    </TextView>

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:id="@+id/CCtwo"
                android:layout_below="@+id/CCone"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                app:cardCornerRadius="15dp"
                android:layout_height="100dp">


                <RelativeLayout
                    android:background="#A70404"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/KK"
                        android:layout_width="70dp"
                        android:src="@drawable/needblood"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_height="70dp">

                    </ImageView>

                    <TextView
                        android:textColor="#fff"
                        android:layout_toRightOf="@id/KK"
                        android:layout_centerVertical="true"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Need Blood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                    </TextView>

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>